extends ../../app/pug/layouts/service-layout

append vars
  - title = "Услуга первого уровня"
  - description = "Описание Service-detail"

append content
    +regLibrary('swiper/swiper-bundle.min.css', 'swiper/swiper-bundle.min.js')
    +regPage('service-detail', true, true)
    +regComponent('header', true, true)
    +regComponent('breadcrumbs', true, true)
    +regComponent('case-card', true, true)
    +regComponent('material-card', true, true)
    +regComponent('pagination', true, true)
    +regBlock('banner-cost', true, true)
    +regBlock('collapse-stages', true, true)
    +regBlock('order-analysis', true, true)
    +regBlock('services-showcase', true, true)
    +regBlock('tags', true, true)
    +regBlock('company-rating', true, true)
    +regBlock('tech-exp', true, true)
