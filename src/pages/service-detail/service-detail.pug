    +header().light
    .service-layout(class="anim animslide animslidehide animdalay200")
        .service-layout__main
            .container
                .service-layout__main--body
                    .service-layout__breadcrumbs
                        +breadcrumbs(['Главная', 'Услуги', 'Комплексное внедрение Битрикс24 "под ключ"'])
                    .service-layout__main--content
                        .service-layout__main--info
                            h1.h1.service-layout__main--title Комплексное внедрение Битрикс24 "под ключ"
                            p.service-layout__main--description Обеспечьте автоматизацию, интеграцию и эффективное управление бизнес-процессами компании.
                            button(data-modal="consultation").btn.primary.lg Заказать услугу
                        .service-layout__main--image
                            img(src="./images/services-detail/1.png", alt="")
                    .service-layout__companies
                        .swiper
                            .swiper-wrapper
                                .swiper-slide
                                    img(src="./images/companies/vodohod.svg", alt="")
                                .swiper-slide
                                    img(src="./images/companies/sberstrahovane.svg", alt="")
                                .swiper-slide
                                    img(src="./images/companies/x5.svg", alt="")
                                .swiper-slide
                                    img(src="./images/companies/robokassa.svg", alt="")
                                .swiper-slide
                                    img(src="./images/companies/ekra.svg", alt="")
